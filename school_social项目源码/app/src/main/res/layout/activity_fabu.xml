<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fabu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.administrator.hd_app.fabu_Activity">
    <TextView
        android:id="@+id/hd_fabu_text"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="#1E90FF"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="活动发布"/>
    <LinearLayout
        android:id="@+id/fabu_linear1"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_below="@+id/hd_fabu_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动名称："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/fabu_hdname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:hint="必填"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fabu_linear4"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_below="@+id/fabu_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动日期："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/fabu_hddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="必填"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动时间："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/fabu_hdtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="必填"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80999999"
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/beijing_linear2"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/date_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/date_text"
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="#1E90FF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="选择日期"/>
            <DatePicker
                android:id="@+id/fabu_date"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10">
            </DatePicker>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <Button
                    android:id="@+id/date_queren"
                    android:text="确认"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/date_qvxiao"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80999999"
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/beijing_linear3"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/time_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/time_text"
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="#1E90FF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="选择时间"/>
            <TimePicker
                android:paddingTop="70px"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabu_time"
                android:layout_gravity="center">
            </TimePicker>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <Button
                    android:id="@+id/time_queren"
                    android:text="确认"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/time_qvxiao"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabu_linear2"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_below="@+id/fabu_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动地点："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/fabu_hdsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:hint="必填"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fabu_linear3"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_below="@+id/fabu_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="300px"
            android:layout_weight="1"
            android:text="活动简介："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/fabu_hdjianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:hint="必填"
            android:height="300px"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabu_linear6"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_below="@+id/fabu_linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="报名日期："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/baoming_hddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="选填"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="报名时间："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/baoming_hdtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:hint="选填"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80999999"
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/beijing_linear4"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/baoming_date_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView
                android:id="@+id/baoming_date_text"
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="#1E90FF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="选择日期"/>
            <DatePicker
                android:id="@+id/baoming_date"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10">
            </DatePicker>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <Button
                    android:id="@+id/baoming_date_queren"
                    android:text="确认"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/baoming_date_qvxiao"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80999999"
        android:visibility="gone"
        android:orientation="horizontal"
        android:id="@+id/beijing_linear5"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/baoming_time_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/baoming_time_text"
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="#1E90FF"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="选择时间"/>
            <TimePicker
                android:paddingTop="70px"
                android:layout_weight="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/baoming_time"
                android:layout_gravity="center">
            </TimePicker>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108px"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <Button
                    android:id="@+id/baoming_time_queren"
                    android:text="确认"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/baoming_time_qvxiao"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:background="#1E90FF"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabu_linear7"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_below="@+id/fabu_linear6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="报名地点："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/baoming_hdsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:hint="选填"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/fabu_queren"
            android:text="发布"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#1E90FF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fabu_qvxiao"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="#1E90FF"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fabu_linear5"
        android:paddingTop="16px"
        android:paddingRight="16px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fabu_linear4"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="活动类型："
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="#555555"/>
        <EditText
            android:id="@+id/fabu_hdleixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:hint="选择一种至三种类型"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
