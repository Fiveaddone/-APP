<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#0000ff">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            android:paddingLeft="10dp"
            android:onClick="back"
            android:background="@drawable/select_image_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请服务"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">



    <TextView
        android:id="@+id/phone_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="电话号码*："
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/phone_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="请输入电话号码"
        android:padding="3dp"
        android:textSize="20sp"

        android:background="@drawable/add_commodity_edit_select"/>
    <TextView
        android:id="@+id/phone_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:textColor="#ff0000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生证号码*："
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/id_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="13"
        android:hint="请输入学生证号码"
        android:padding="3dp"
        android:textSize="20sp"
        android:background="@drawable/add_commodity_edit_select"/>
    <TextView
        android:id="@+id/id_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:textColor="#ff0000"/>
    <TextView
        android:id="@+id/time_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="请选择服务时段*："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/time1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="2"
            android:layout_below="@+id/time_title"
            android:background="@drawable/add_commodity_edit_select"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="到"/>
        <Spinner
            android:id="@+id/time2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:background="@drawable/add_commodity_edit_select"
            android:padding="5dp"
            android:entries="@array/time2"
            >

        </Spinner>


    </LinearLayout>
    <TextView
        android:id="@+id/time_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:textColor="#ff0000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务名称*："
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="13"
        android:hint="请输入服务名称"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_commodity_edit_select"/>
    <TextView
        android:id="@+id/name_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:textColor="#ff0000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="服务介绍："
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/intro_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="13"
        android:hint="请输入服务介绍"
        android:padding="3dp"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_commodity_edit_select"/>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交申请"
        android:textSize="20sp"
        android:background="@drawable/select_image_bg"/>
    </LinearLayout>

</LinearLayout>